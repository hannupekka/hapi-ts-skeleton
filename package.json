{
  "name": "hapi-ts-skeleton",
  "version": "1.0.0",
  "description": "Backend skeleton with hapi and TS",
  "main": "index.js",
  "scripts": {
    "ban": "ban",
    "build": "tsc",
    "dev": "source .env && docker-compose up web postgres",
    "dev:server":
      "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "lint": "tslint --project .",
    "prepush": "npm run lint && npm run ban && npm run test",
    "start": "node --max_old_space_size=500 dist/bin/index.js",
    "pretest": "docker-compose up -d test",
    "test": "NODE_ENV=test jest --forceExit || true",
    "posttest": "docker-compose stop test",
    "watch-node": "nodemon dist/bin/index.js",
    "watch-ts": "tsc -w"
  },
  "author": "Hannu-Pekka Heinäjärvi <hannupekka@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "boom": "^7.2.0",
    "good": "^8.1.1",
    "hapi": "^17.3.1",
    "hapi-good-winston": "^2.0.0",
    "hapi-require-https": "^3.0.0",
    "hapi-swagger": "^9.1.1",
    "inert": "^5.1.0",
    "joi": "^13.2.0",
    "knex": "^0.14.6",
    "lodash": "^4.17.5",
    "pg": "^7.4.1",
    "typescript": "^2.8.3",
    "vision": "^5.3.2",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "@types/boom": "^7.2.0",
    "@types/hapi": "^17.0.10",
    "@types/inert": "^5.1.0",
    "@types/jest": "^22.2.3",
    "@types/joi": "^13.0.7",
    "@types/knex": "^0.14.12",
    "@types/lodash": "^4.14.107",
    "@types/vision": "^5.3.2",
    "@types/winston": "^2.3.9",
    "ban-sensitive-files": "^1.9.2",
    "concurrently": "^3.5.1",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "nodemon": "^1.17.3",
    "ts-jest": "^22.4.4",
    "ts-node": "^6.0.0",
    "tslint": "^5.9.1"
  },
  "engines": {
    "yarn": "^1.6.0",
    "node": ">=9.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": ["ts", "js"],
    "setupTestFrameworkScriptFile": "./tools/jest/setup.ts"
  }
}
